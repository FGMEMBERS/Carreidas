      <file>Aircraft/Carreidas/Models/Interior/Panel/Instruments/kr87/kr87.nas</file>
      <script><![CDATA[
        kr87.new("/instrumentation/adf[0]");
        kr87.new("/instrumentation/adf[1]");
      ]]></script>
    </kr87>
-->
    <ki266>
      <file>Aircraft/Carreidas/Models/Interior/Panel/Instruments/dme/ki266.nas</file>
      <script><![CDATA[
        ki266.new(0);
      ]]></script>
    </ki266>
    <m877>
      <file>Aircraft/Carreidas/Models/Interior/Panel/Instruments/M877/M877.nas</file>
    </m877>
    <engines>
      <file>Aircraft/Generic/Engines/generic-yasim-engine.nas</file>
      <file>Aircraft/Carreidas/Nasal/engines-yasim.nas</file>
    </engines>
  </nasal>

</PropertyList>
