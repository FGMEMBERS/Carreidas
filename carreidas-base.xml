<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim  include="Nasal/views.xml">

    <author>Emmanuel BARANGER (3D/FDM)</author>
    <status>development</status>
  
    <fuel-fraction>1.0</fuel-fraction>
  
    <sound>
      <audible>true</audible>
      <path>Aircraft/Carreidas/Sounds/carreidas-sound.xml</path>
    </sound>

    <model>
     <path>Aircraft/Carreidas/Models/carreidas.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
     <carreidas>
      <klu type="bool">false</klu>
      <us type="bool">true</us>
     </carreidas>
    </model>

    <startup>
     <splash-texture>Aircraft/Carreidas/carreidas-splash.png</splash-texture>
    </startup>

    <virtual-cockpit archive="y">true</virtual-cockpit>

    <multiplay>
      <chat_display>1</chat_display>
      <generic>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
      </generic>
    </multiplay>

    <help>
      <title>Carreidas 160</title>
      <line>______________________________________________</line>
      <key>
        <name>d</name>
        <desc>Open/Close crew doors</desc>
      </key>
      <key>
        <name>Delete</name>
        <desc>Toggle Reversers</desc>
      </key>
    </help>

    <flaps>
      <setting>0.00</setting> <!-- UP -->
      <setting>0.25</setting> <!-- 10 -->
      <setting>0.50</setting> <!-- 20 -->
      <setting>0.75</setting> <!-- 30 -->
      <setting>1.00</setting> <!-- FULL -->
    </flaps>

    <instrumentation>
      <path>Aircraft/Carreidas/Systems/instrumentation.xml</path>
    </instrumentation>

    <systems>
      <autopilot>
        <path>Aircraft/Carreidas/Systems/Bravo-autopilot.xml</path>
      </autopilot>
      <path>Aircraft/Carreidas/Systems/systems.xml</path>
    </systems>

    <menubar include="Dialogs/carreidas-menu.xml"/>

  </sim>

  <consumables>
   <fuel>
    <tank n="0">
     <level-gal_us archive="y">150</level-gal_us>
    </tank>
    <tank n="1">
     <level-gal_us archive="y">50</level-gal_us>
    </tank>
    <tank n="3">
     <level-gal_us archive="y">50</level-gal_us>
    </tank>
   </fuel>
  </consumables>

  <input>
    <keyboard include="Nasal/carreidas-keyboard.xml"/>
  </input>
 
  <systems>
    <electrical>
      <ac-volts>0</ac-volts>
    </electrical>
  </systems>

  <instrumentation>
    <adf n="1">
      <serviceable>true</serviceable>
    </adf>
    <transponder n="0">
      <serviceable>true</serviceable>
    </transponder>
    <transponder n="1">
      <serviceable>true</serviceable>
    </transponder>
    <radar n="0">
      <serviceable>true</serviceable>
    </radar>
  </instrumentation>

  <engines>
    <engine n="0">
      <running>false</running>
    </engine>
    <engine n="1">
      <running>false</running>
    </engine>
    <engine n="2">
      <running>false</running>
    </engine>
  </engines>

  <nasal>
    <carreidas>
      <file>Aircraft/Carreidas/Nasal/doors.nas</file>
      <file>Aircraft/Carreidas/Nasal/light.nas</file>
      <file>Aircraft/Carreidas/Nasal/liveries.nas</file>
      <file>Aircraft/Carreidas/Nasal/immat.nas</file>
    </carreidas>
    <efis>
      <file>Aircraft/Instruments-3d/primus-1000/P1000.nas</file>
    </efis>
    <citation>
      <file>Aircraft/Carreidas/Nasal/Bravo.nas</file>
      <file>Aircraft/Carreidas/Nasal/Electrical.nas</file>
      <file>Aircraft/Carreidas/Nasal/flightdirector.nas</file>
    </citation>
    <systems>
      <file>Aircraft/Carreidas/Models/Interior/Instruments/KLN90B/kln90b.nas</file>
    </systems>
    <zkv500>
      <file>Aircraft/Instruments-3d/zkv500/ZKV500.nas</file>
    </zkv500>
    <kr87>
      <file>Aircraft/Carreidas/Models/Interior/Instruments/kr87/kr87.nas</file>
      <script><![CDATA[
        kr87.new("/instrumentation/adf[0]");
        kr87.new("/instrumentation/adf[1]");
      ]]></script>
    </kr87>
  </nasal>

</PropertyList>

