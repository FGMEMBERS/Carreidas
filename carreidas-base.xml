<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim  include="Nasal/views.xml">

    <author>Emmanuel BARANGER (3D/FDM)</author>
    <status>development</status>
  
    <fuel-fraction>1.0</fuel-fraction>
  
    <sound>
      <audible>true</audible>
      <path>Aircraft/Carreidas/Sounds/carreidas-sound.xml</path>
    </sound>

    <model>
     <path>Aircraft/Carreidas/Models/carreidas.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
     <carreidas>
      <klu type="bool">false</klu>
      <us type="bool">true</us>
     </carreidas>
        <autostart type="bool">0</autostart>
        <Bravo>
            <n1 n="0" type="double">0</n1>
            <n1 n="1" type="double">0</n1>
            <n1 n="2" type="double">0</n1>
            <n1 n="3" type="double">0</n1>
            <n2 n="0" type="double">0</n2>
            <n2 n="1" type="double">0</n2>
            <n2 n="2" type="double">0</n2>
            <n2 n="3" type="double">0</n2>
            <start-cycle n="0" type="bool">0</start-cycle>
            <start-cycle n="1" type="bool">0</start-cycle>
            <start-cycle n="2" type="bool">0</start-cycle>
            <start-cycle n="3" type="bool">0</start-cycle>
        </Bravo>
    </model>

    <startup>
     <splash-texture>Aircraft/Carreidas/carreidas-splash.png</splash-texture>
    </startup>

    <virtual-cockpit archive="y">true</virtual-cockpit>

    <multiplay>
      <chat_display>1</chat_display>
      <generic>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
      </generic>
    </multiplay>

    <help>
      <title>Carreidas 160</title>
      <line>______________________________________________</line>
      <key>
        <name>d</name>
        <desc>Open/Close crew doors</desc>
      </key>
      <key>
        <name>Delete</name>
        <desc>Toggle Reversers</desc>
      </key>
    </help>

    <flaps>
      <setting>0.00</setting> <!-- UP -->
      <setting>0.25</setting> <!-- 10 -->
      <setting>0.50</setting> <!-- 20 -->
      <setting>0.75</setting> <!-- 30 -->
      <setting>1.00</setting> <!-- FULL -->
    </flaps>

    <systems>
      <autopilot>
        <path>Aircraft/Carreidas/Systems/Bravo-autopilot.xml</path>
      </autopilot>
      <path>Aircraft/Carreidas/Systems/systems.xml</path>
    </systems>

    <instrumentation>
      <path>Aircraft/Carreidas/Systems/instrumentation.xml</path>
    </instrumentation>

    <menubar include="Dialogs/carreidas-menu.xml"/>

  </sim>

  <consumables>
   <fuel>
    <tank n="0">
     <level-gal_us archive="y">150</level-gal_us>
    </tank>
    <tank n="1">
     <level-gal_us archive="y">50</level-gal_us>
    </tank>
    <tank n="3">
     <level-gal_us archive="y">50</level-gal_us>
    </tank>
   </fuel>
  </consumables>

  <input>
    <keyboard include="Nasal/carreidas-keyboard.xml"/>
  </input>
 
  <systems>
    <electrical>
      <ac-volts>0</ac-volts>
    </electrical>
  </systems>
  <instrumentation>
    <adf n="1">
      <serviceable type="bool" archive="y">true</serviceable>
    </adf>
    <transponder n="0">
      <serviceable type="bool" archive="y">true</serviceable>
    </transponder>
    <transponder n="1">
      <serviceable type="bool" archive="y">true</serviceable>
    </transponder>
        <radar n="0">
            <switch type="string" archive="y">on</switch>
            <mode-control type="int" archive="y">1</mode-control>
            <display-controls>
                <WX type="bool" archive="y">false</WX>
                <pos type="bool" archive="y">true</pos>
                <data type="bool" archive="y">true</data>
                <symbol type="bool" archive="y">true</symbol>
                <rotate type="bool" archive="y">true</rotate>
            </display-controls>
            <serviceable type="bool">true</serviceable>
            <range type="int" archive="y">5</range>
            <reference-range-nm type="double" archive="y">640</reference-range-nm>
            <mode type="string" archive="y">WX</mode>
            <font>
                <name type="string">typewriter.txf</name>
                <size type="float">6</size>
                <line-spacing type="float">0.4</line-spacing>
                <color>
                    <red type="float">0.7</red>
                    <green type="float">0.7</green>
                    <blue type="float">0.7</blue>
                    <alpha type="float">1</alpha>
                </color>
            </font>
            <lightning type="bool" archive="y">true</lightning>
            <display-mode type="string" archive="y">plan</display-mode>
            <radar-texture-path type="string" archive="y">Aircraft/Instruments-3d/primus-1000/MFD/od_wxradar.png</radar-texture-path>
            <echo-texture-path type="string" archive="y">Aircraft/Instruments-3d/primus-1000/MFD/wxecho.png</echo-texture-path>
            <minimized type="bool" archive="y">false</minimized>
            <heading-marker type="bool" archive="y">true</heading-marker>
            <limit-deg type="int">360</limit-deg>
        </radar>
    <mk-viii n="0">
      <serviceable type="bool" archive="y">true</serviceable>
    </mk-viii>
        <groundradar>
            <range type="double">1.2</range>
        </groundradar>
    <master-reference-gyro n="0">
      <heading-source type="bool" archive="y">true</heading-source>
    </master-reference-gyro>
  </instrumentation>

  <engines>
    <engine n="0">
      <running type="bool">false</running>
    </engine>
    <engine n="1">
      <running type="bool">false</running>
    </engine>
    <engine n="2">
      <running type="bool">false</running>
    </engine>
    <engine n="3">
      <running type="bool">false</running>
    </engine>
  </engines>

  <nasal>
    <carreidas>
      <file>Aircraft/Carreidas/Nasal/doors.nas</file>
      <file>Aircraft/Carreidas/Nasal/light.nas</file>
      <file>Aircraft/Carreidas/Nasal/liveries.nas</file>
      <file>Aircraft/Carreidas/Nasal/immat.nas</file>
    </carreidas>
    <efis>
      <file>Aircraft/Instruments-3d/primus-1000/P1000.nas</file>
    </efis>
    <citation>
      <file>Aircraft/Carreidas/Nasal/Bravo.nas</file>
      <file>Aircraft/Carreidas/Nasal/Electrical.nas</file>
      <file>Aircraft/Carreidas/Nasal/flightdirector.nas</file>
    </citation>
    <systems>
      <file>Aircraft/Carreidas/Models/Interior/Panel/Instruments/KLN90B/kln90b.nas</file>
    </systems>
    <zkv500>
      <file>Aircraft/Carreidas/Models/Interior/Panel/Instruments/zkv500/ZKV500-gps1.nas</file>
    </zkv500>
    <radar>
      <file>Aircraft/Carreidas/Models/Interior/Panel/Instruments/RDR-160/RDR160.nas</file>
    </radar>
    <kr87>
      <file>Aircraft/Carreidas/Models/Interior/Panel/Instruments/kr87/kr87.nas</file>
      <script><![CDATA[
        kr87.new("/instrumentation/adf[0]");
        kr87.new("/instrumentation/adf[1]");
      ]]></script>
    </kr87>
    <ki266>
      <file>Aircraft/Carreidas/Models/Interior/Panel/Instruments/dme/ki266.nas</file>
      <script><![CDATA[
        ki266.new(0);
      ]]></script>
     </ki266>
    <m877>
        <file>Aircraft/Instruments-3d/clock/M877/M877.nas</file>
    </m877>
  </nasal>

</PropertyList>

