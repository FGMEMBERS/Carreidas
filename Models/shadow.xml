<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>shadow.ac</path>

  <animation>
    <!-- Objets opaques -->

    <!-- Objets transparents -->
    <object-name>shadow</object-name>
    <object-name>shadowL</object-name>
    <object-name>shadowR</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>shadow</object-name>
    <object-name>shadowL</object-name>
    <object-name>shadowR</object-name>
  </animation>

  <animation>
    <name>ShadowTotal</name>
    <object-name>shadow</object-name>
    <object-name>shadowL</object-name>
    <object-name>shadowR</object-name>
  </animation>

  <animation>
    <type>select</type>
    <object-name>ShadowTotal</object-name>
    <condition>
      <and>
        <not><property>sim/freeze/replay-state</property></not>
        <not><property>sim/rendering/shadows/enabled</property></not>
      </and>
    </condition>
  </animation>

  <!-- Une ombre pour OSG en attendant mieux ;) basÃ© sur l'ombre du DC 3-->
  <!-- pitch -->
  <animation>
    <type>rotate</type>
    <object-name>ShadowTotal</object-name>
    <property>/orientation/pitch-deg</property>
    <factor> -1 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- roll -->
  <animation>
    <type>rotate</type>
    <object-name>ShadowTotal</object-name>
    <property>/orientation/roll-deg</property>
    <factor> 1 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Translate to ground level -->
  <animation>
   <type>translate</type>
   <object-name>ShadowTotal</object-name>
   <property>sim/multiplay/generic/float[2]</property>
   <factor> -1 </factor>
   <axis>
     <x> 0 </x>
     <y> 0 </y>
     <z> 1 </z>
   </axis>
 </animation>

  <animation>
    <type>rotate</type>
    <object-name>shadowL</object-name>
    <property>velocities/mach</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep>  0 </dep></entry>
      <entry><ind> 0.5 </ind><dep>  0 </dep></entry>
      <entry><ind> 0.6 </ind><dep> 10 </dep></entry>
      <entry><ind> 0.7 </ind><dep> 20 </dep></entry>
      <entry><ind> 0.8 </ind><dep> 30 </dep></entry>
      <entry><ind> 0.9 </ind><dep> 43 </dep></entry>
      <entry><ind> 2.5 </ind><dep> 43 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.552 </x-m>
      <y-m> -3.552 </y-m>
      <z-m> -1.909 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <animation>
    <name>AileDTotale</name>
    <object-name>aileD</object-name>
    <object-name>aileronD</object-name>
    <object-name>voletD</object-name>
    <object-name>lampeD</object-name>
    <object-name>RightLight</object-name>
    <object-name>RightLightW</object-name>
    <object-name>slatD</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>shadowR</object-name>
    <property>velocities/mach</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep>   0 </dep></entry>
      <entry><ind> 0.5 </ind><dep>   0 </dep></entry>
      <entry><ind> 0.6 </ind><dep> -10 </dep></entry>
      <entry><ind> 0.7 </ind><dep> -20 </dep></entry>
      <entry><ind> 0.8 </ind><dep> -30 </dep></entry>
      <entry><ind> 0.9 </ind><dep> -43 </dep></entry>
      <entry><ind> 2.5 </ind><dep> -43 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.552 </x-m>
      <y-m>  3.552 </y-m>
      <z-m> -1.909 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

</PropertyList>
