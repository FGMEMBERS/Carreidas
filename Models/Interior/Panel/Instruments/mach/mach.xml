<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- Mach -->
<PropertyList>

  <path>mach.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <object-name>Course1</object-name>
    <object-name>Course10</object-name>
    <object-name>Course100</object-name>
    <emission>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

  <!-- Mach -->
  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>velocities/mach</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> 180 </dep></entry>
      <entry><ind> 0.7 </ind><dep> 200 </dep></entry>
      <entry><ind> 0.8 </ind><dep> 220 </dep></entry>
      <entry><ind> 0.9 </ind><dep> 240 </dep></entry>
      <entry><ind> 1.0 </ind><dep> 260 </dep></entry>
      <entry><ind> 1.1 </ind><dep> 300 </dep></entry>
      <entry><ind> 1.2 </ind><dep> 320 </dep></entry>
      <entry><ind> 1.3 </ind><dep> 340 </dep></entry>
      <entry><ind> 1.4 </ind><dep> 360 </dep></entry>
      <entry><ind> 1.6 </ind><dep> 400 </dep></entry>
      <entry><ind> 1.8 </ind><dep> 440 </dep></entry>
      <entry><ind> 2.0 </ind><dep> 480 </dep></entry>
      <entry><ind> 2.1 </ind><dep> 500 </dep></entry>
      <entry><ind> 2.2 </ind><dep> 520 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>Course1</object-name>
    <property>velocities/mach</property>
    <factor>-10</factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>textranslate</type>
    <object-name>Course10</object-name>
    <property>velocities/mach</property>
    <factor>-1</factor>
    <step>0.1</step>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>textranslate</type>
    <object-name>Course100</object-name>
    <property>velocities/mach</property>
    <factor>-0.1</factor>
    <step>1</step>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
 
</PropertyList>
