<?xml version="1.0"?>
<!--
Author : Syd Adams
Primus 1000 Autopilot Controller
-->
<PropertyList>
<path>AP-control.ac</path>

    <animation>
        <type>select</type>
        <object-name>AP-on</object-name>
        <condition>
            <not>
                <property>autopilot/locks/passive-mode</property>
            </not>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>YD-on</object-name>
        <condition>
            <property>autopilot/locks/yaw-damper</property>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>Low-on</object-name>
        <condition>
            <property>instrumentation/flightdirector/bank-limit-switch</property>
        </condition>
    </animation>

<!-- hotspots-->
<animation>
    <type>pick</type>
    <object-name>AP-on.btn</object-name>
    <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
            <command>nasal</command>
                <script>citation.FlDr.toggle_autopilot("ap");</script>
        </binding>
    </action>
</animation>

<animation>
    <type>pick</type>
    <object-name>YD-on.btn</object-name>
    <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
            <command>nasal</command>
                <script>citation.FlDr.toggle_autopilot("yd");</script>
        </binding>
    </action>
</animation>

<animation>
    <type>pick</type>
    <object-name>Lowbank.btn</object-name>
    <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
            <command>nasal</command>
                <script>citation.FlDr.toggle_autopilot("bank");</script>
        </binding>
    </action>
</animation>

<animation>
    <type>pick</type>
    <object-name>Pitch.wheel</object-name>
    <action>
        <button>0</button>
        <repeatable>true</repeatable>
        <binding>
            <command>nasal</command>
                <script>citation.FlDr.pitch_wheel(1);</script>
        </binding>
    </action>
</animation>

<animation>
    <type>pick</type>
    <object-name>Pitch.wheel</object-name>
    <action>
        <button>1</button>
        <repeatable>true</repeatable>
        <binding>
            <command>nasal</command>
                <script>citation.FlDr.pitch_wheel(-1);</script>
        </binding>
    </action>
</animation>

<animation>
    <type>pick</type>
    <object-name>Roll.trim</object-name>
    <action>
        <button>0</button>
        <repeatable>true</repeatable>
        <binding>
            <command>nasal</command>
                <script>citation.FlDr.roll_knob(-1);</script>
        </binding>
    </action>
</animation>

<animation>
    <type>pick</type>
    <object-name>Roll.trim</object-name>
    <action>
        <button>1</button>
        <repeatable>true</repeatable>
        <binding>
            <command>nasal</command>
                <script>citation.FlDr.roll_knob(1);</script>
        </binding>
    </action>
</animation>


</PropertyList>