<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interior</object-name>
    <object-name>planchet</object-name>
    <object-name>cloison</object-name>
    <object-name>stair</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>intvitres</object-name>
  </effect>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Carreidas/Models/Interior/Seats/All-Seats.xml</path>
  </model>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Carreidas/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -10.107 </x-m>
      <y-m>  -0.462 </y-m>
      <z-m>  -0.920 </z-m>
    </offsets>
  </model>

  <!-- Panel -->
  <model>
    <path>Aircraft/Carreidas/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -11.250 </x-m>
      <y-m>   0.000 </y-m>
      <z-m>  -0.715 </z-m>
    </offsets>
  </model>

  <!-- iPad "Removed for the moment....
  <model>
    <path>Aircraft/Carreidas/Models/Interior/Panel/iPad/ipad.xml</path>
    <offsets>
      <pitch-deg>-90</pitch-deg>
      <heading-deg>180</heading-deg>
      <x-m> -4.75 </x-m>
      <y-m>   0.60 </y-m>
      <z-m>  -1.07 </z-m>
    </offsets>
  </model> -->

  <!-- Porte -->
  <animation>
    <type>pick</type>
    <object-name>stair</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>stair</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <factor> 130 </factor>
    <center>
      <x-m> -7.042 </x-m>
      <y-m> -0.884 </y-m>
      <z-m> -1.842 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

